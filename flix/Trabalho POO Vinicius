package uvv.flix;

public class UVVFlix {

    public static void main(String[] args) {
        Filme filme1 = new Filme(1, "Matrix", 150, "Ação");
        Filme filme2 = new Filme(2, "Senhor dos Anéis", 180, "Fantasia");

        Ator ator1 = new Ator(1, "Keanu Reeves", "Neo");
        Ator ator2 = new Ator(2, "Ian McKellen", "Gandalf");

        filme1.adicionarAtor(ator1);
        filme2.adicionarAtor(ator2);

        Sala sala1 = new Sala(1, 100, "3D", "Andar 1");
        Sala sala2 = new Sala(2, 80, "2D", "Andar 2");

        Sessao sessao1 = new Sessao(true, "19:00");
        Sessao sessao2 = new Sessao(true, "21:30");

        sessao1.adicionarFilme(filme1);
        sessao2.adicionarFilme(filme2);

        sala1.adicionarSessao(sessao1);
        sala2.adicionarSessao(sessao2);

        InOut.MsgDeAviso("Novidade", "Informações da sala");
        InOut.MsgDeInformacao("Sala 1", "Onde fica a sala 1: " + sala1.getLocalizacao());
        InOut.MsgDeInformacao("Sala 1", "Que tipo de tela será?: " + sala1.getTipoTela());
        sala1.listarSessoes();
        InOut.MsgDeInformacao("Assentos disponíveis", "Os Assentos disponíveis na sala 1 são: " + sala1.calcularAssentosDisponiveis());

        System.out.println();

        System.out.println("Sala 2 - " + sala2.getLocalizacao() + ", " + sala2.getTipoTela());
        sala2.listarSessoes();
        System.out.println("Assentos disponiveis: " + sala2.calcularAssentosDisponiveis());
    
    }
}
